@model IEnumerable<Student_Book.Link>
@using Student_Book.Controllers
@{
    ViewBag.Title = "Index";
}

<h2><strong>@ViewBag.Subject</strong></h2>

<h5>
    @ViewBag.SubjectDescrption
</h5>
@if (User.IsInRole(RoleName.Admin) || User.IsInRole(RoleName.Manger))
{
    <h5>  @Html.ActionLink("Create New", "Create", "Links")  </h5>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Pdf_Name)
        </th>


        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>

                <a href="@Html.DisplayFor(modelItem => item.Link1)">@Html.DisplayFor(modelItem => item.Pdf_Name)</a>

            </td>
            @if (User.IsInRole(RoleName.Admin) || User.IsInRole(RoleName.Manger))
            {

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id_Link }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id_Link }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id_Link })
                </td>
            }
        </tr>
    }

</table>
